<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:logo">@mipmap/actionbar_logo</item>
        <item name="logo">@mipmap/actionbar_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="AppTheme.ActionBarChild" parent="Widget.AppCompat.Light.ActionBar">

    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NewFeatureDialog">
        <item name="android:background">#FF0000</item>
    </style>
</resources>
